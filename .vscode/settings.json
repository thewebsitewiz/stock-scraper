{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
    },
    "lib": ["es2015"],
    "include": ["src/**/*.ts", ],
    "exclude": ["node_modules", ".vscode", "src/**/*.spec.ts"],
    "cSpell.words": [
        "dennisluken",
        "dluken"
    ]
}