{
    "lib": ["es2015"],
    "include": ["**/*.ts", ],
    "exclude": ["node_modules", ".vscode", "**/*.spec.ts"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "/",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": "/",
        "paths": {
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@schemas/*": [
                "schemas/*"
            ],
            "@utils/*": [
                "/utils/*"
            ],
        },
    },
}